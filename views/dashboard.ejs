<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - TradeLink</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Charts.css -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/charts.css/dist/charts.min.css">
    
    <!-- CSS local -->
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="/imagens/logo.png" alt="TradeLink">
            </div>
            <nav>
                <ul>					
					<li><a href="dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
					<li><a href="fornecedores"><i class="fas fa-user"></i> Perfil</a></li>
					<li><a href="pedidos"><i class="fas fa-file-invoice"></i> Pedidos/Vendas</a></li>
					<li><a href="historico"><i class="fas fa-history"></i> Histórico</a></li>
					<li><a href="mensagens"><i class="fas fa-envelope"></i> Mensagens</a></li>
					<li class="active"><a href="produto"><i class="fas fa-box"></i> Produtos</a></li>
					<li><a href="categoria"><i class="fas fa-tags"></i> Categorias</a></li>
					<li><a href="configuracoes"><i class="fas fa-cog"></i> Configurações</a></li>
				</ul>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header>
                <h1><i class="fas fa-home"></i> Dashboard</h1>
                <div class="user-info">
                    <span>TradeLink</span>
                    <img src="/imagens/profile.jpg" alt="Usuário">
                </div>
            </header>

            <div class="content">
                <!-- Resumo Financeiro -->
                <div class="financial-summary">
                    <div class="summary-card">
                        <div class="summary-icon"><i class="fas fa-hand-holding-usd"></i></div>
                        <div class="summary-content">
                            <span class="summary-label">Faturamento Total</span>
                            <span class="summary-value" id="total-revenue">0</span>
                            <div class="summary-trend positive">
                                <i class="fas fa-arrow-up"></i>
                                <span id="revenue-trend">0%</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="summary-card">
                        <div class="summary-icon"><i class="fas fa-shopping-cart"></i></div>
                        <div class="summary-content">
                            <span class="summary-label">Total de Pedidos</span>
                            <span class="summary-value" id="total-orders">0</span>
                            <div class="summary-trend positive">
                                <i class="fas fa-arrow-up"></i>
                                <span id="orders-trend">0%</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="summary-card">
                        <div class="summary-icon"><i class="fas fa-truck"></i></div>
                        <div class="summary-content">
                            <span class="summary-label">Pedidos Pendentes</span>
                            <span class="summary-value" id="pending-orders">0</span>
                            <div class="summary-trend negative">
                                <i class="fas fa-arrow-down"></i>
                                <span id="pending-trend">0%</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="summary-card">
                        <div class="summary-icon"><i class="fas fa-users"></i></div>
                        <div class="summary-content">
                            <span class="summary-label">Novos Clientes</span>
                            <span class="summary-value" id="new-customers">0</span>
                            <div class="summary-trend positive">
                                <i class="fas fa-arrow-up"></i>
                                <span id="customers-trend">0%</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gráficos -->
                <div class="dashboard-charts">
                    <div class="chart-container large">
                        <div class="chart-header">
                            <h3>Faturamento Mensal</h3>
                            <div class="chart-actions">
                                <button class="btn btn-secondary export-btn" data-chart="revenue">
                                    <i class="fas fa-download"></i> Exportar
                                </button>
                            </div>
                        </div>
                        <div class="chart-content">
                            <canvas id="revenue-chart"></canvas>
                        </div>
                    </div>

                    <div class="chart-container">
                        <div class="chart-header">
                            <h3>Distribuição de Pedidos</h3>
                            <div class="chart-actions">
                                <button class="btn btn-secondary export-btn" data-chart="orders">
                                    <i class="fas fa-download"></i> Exportar
                                </button>
                            </div>
                        </div>
                        <div class="chart-content">
                            <canvas id="orders-chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Passando dados do servidor para JS -->
    <script>
        const dashboardDataFromServer =  JSON.stringify(dados || {}) ;
    </script>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/JavaScript/dashboard.js"></script>
</body>
</html>
