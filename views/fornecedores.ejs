<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Fornecedor - TradeLink</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="css/fornecedores.css">
</head>

<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="images/logo.png" alt="TradeLink">
            </div>
            <nav>
                <ul>
                    <li><a href="inicial"><i class="fas fa-home"></i> Produtos</a></li>
                    <li><a href="dashboard"><i class="fas fa-home"></i> Dashboard</a></li>
                    <li class="active"><a href="fornecedores"><i class="fas fa-user"></i> Perfil</a></li>
                    <li><a href="pedidos"><i class="fas fa-file-invoice"></i> Pedidos/Vendas</a></li>
                    <li><a href="historico"><i class="fas fa-history"></i> Histórico</a></li>
                    <li><a href="chat"><i class="fas fa-robot"></i> Chat IA</a></li>
                    <li><a href="categoria"><i class="fas fa-tags"></i> Categorias</a></li>
                    <li><a href="configuracoes"><i class="fas fa-cog"></i> Configurações</a></li>
                </ul>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header>
                <h1><i class="fas fa-user"></i> Perfil d<%= usuario.cnpj ? 'a Empresa' : 'o Fornecedor' %>
                </h1>
                <div class="user-info">
                    <span id="header-user-name">TradeLink</span>
                    <img id="header-user-pic" src="images/profile.jpg" alt="Usuário">
                </div>
            </header>

            <div class="content">
                <!-- Banner e Avatar -->
                <div class="profile-container">
                    <div class="profile-banner">
                        <img id="banner-image" src="images/banner.jpg" alt="Banner">
                    </div>
                    <div class="profile-info">
                        <div class="profile-avatar">
                            <img id="avatar-image" src="images/foto.jpg" alt="Avatar">
                        </div>
                        <div class="profile-details">
                            <h1 class="profile-name" id="profile-name">
                                <%= usuario.nome_fantasia %>
                            </h1>
                            <div class="profile-location">
                                <i class="fas fa-map-marker-alt"></i>
                                <span id="profile-location">
                                    <%= usuario.localizacao || 'Sua localizacao' %>
                                </span>
                            </div>
                            <p class="profile-description" id="profile-description">
                                <%= usuario.descricao || 'Sua descricao' %>
                            </p>
                            <div class="profile-stats">
                                <div class="stat-item">
                                    <span class="stat-value" id="products-count">0</span>
                                    <span class="stat-label">Produtos</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value">32</span>
                                    <span class="stat-label">Pedidos</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value">4.8</span>
                                    <span class="stat-label">Avaliação</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formulário de Edição -->
                <form id="formPerfil" method="POST" action="updateDados">
                    <div class="form-section">
                        <h2>Informações Pessoais</h2>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="fornecedor-nome">Nome:</label>
                                <input id="fornecedor-nome" name="nome_fantasia" type="text"
                                    value="<%= usuario.nome_fantasia %>" required>
                            </div>
                            <div class="form-group">
                                <label for="fornecedor-email">Email:</label>
                                <input id="fornecedor-email" name="email" type="email" value="<%= usuario.email || ''%>"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="fornecedor-cpf">CPF/CNPJ:</label>
                                <input disabled id="fornecedor-cpf" name="<%= usuario.cnpj? 'cnpj' : 'cpf' %>"
                                    type="text" value="<%= usuario.cnpj || usuario.cpf %>" required><label></label>
                            </div>
                            <div class="form-group">
                                <label for="fornecedor-local">Localização:</label>
                                <input id="fornecedor-local" name="localizacao" type="text"
                                    value="<%= usuario.localizacao || 'não definido'%>" required>
                            </div>

                            <div class="form-group">
                                <label for="fornecedor-telefone">Telefone:</label>
                                <input id="fornecedor-telefone" name="telefone" type="tel"
                                    value="<%= usuario.telefone || 'não definido' %>" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h2>Descrição do Negócio</h2>
                        <div class="form-group">
                            <label for="fornecedor-descricao">Descreva seu negócio:</label>
                            <textarea id="fornecedor-descricao" name="descricao"
                                placeholder="<%= usuario.descricao || 'Descreva seu negocio' %>" required></textarea>
                        </div>
                    </div>

                    <!-- Seção de Produtos -->


                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary" id="cancel-btn">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="save-btn">
                            <span id="submit-text">Salvar Alterações</span>

                        </button>
                    </div>
                </form>
                <% if(usuario.id_fornecedor){ %>
                    <div class="form-section">
                        <h2>Produtos do Fornecedor</h2>
                        <div class="products-section">
                            <div class="products-carousel">
                                <button class="carousel-button carousel-button-prev">
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                                <div class="carousel-container">
                                    <div class="carousel-track">
                                        <!-- Produtos serão adicionados aqui via JavaScript -->
                                    </div>
                                </div>
                                <button class="carousel-button carousel-button-next">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            </div>
                            <button class="btn btn-primary" id="add-product-btn">
                                <i class="fas fa-plus"></i> Adicionar Produto
                            </button>
                        </div>
                    </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Modal para Upload de Imagem -->
    <div id="image-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="image-modal-title">Alterar Imagem</h2>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Selecionar imagem:</label>
                    <input type="file" id="image-upload" accept="image/*">
                </div>
                <div id="image-preview-container" style="display: none;">
                    <label>Pré-visualização:</label>
                    <div id="image-preview" style="max-width: 100%; max-height: 300px; margin-top: 10px;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancel-image-btn">Cancelar</button>
                <button type="button" class="btn btn-primary" id="save-image-btn">Salvar Imagem</button>
            </div>
        </div>
    </div>

    <!-- Modal para Adicionar/Editar Produto -->
    <form action="cadastrarProduto" method="POST">
        <div id="product-modal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 id="product-modal-title">Adicionar Produto</h2>
                    <span class="close">&times;</span>
                </div>
                <div class="modal-body">
                    <form id="formProduct">
                        <div class="form-group">
                            <label for="product-name">Nome do Produto:</label>
                            <input id="product-name" type="text" name="nome_produto" required>
                        </div>
                        <div class="form-group">
                            <label for="product-description">Descrição:</label>
                            <textarea id="product-description" name="descricao" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="product-price">Preço (R$):</label>
                            <input id="product-price" type="number" step="0.01" name="preco" required>
                        </div>
                        <div class="form-group">
                            <label for="categoria">Categoria:</label>
                            <select id="categoria" name="categoria" required>
                                <option value="">Selecione uma categoria</option>
                                <option value="eletronicos">Eletrônicos</option>
                                <option value="roupas">Roupas</option>
                                <option value="alimentos">Alimentos</option>
                                <option value="livros">Livros</option>
                                <option value="outros">Outros</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="product-image">Imagem do Produto:</label>
                            <input type="file" id="product-image" accept="image/*">
                            <div id="product-image-preview" style="margin-top: 10px; display: none;">
                                <img id="product-preview-img" src="#" alt="Preview"
                                    style="max-width: 100%; max-height: 200px;">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-product-btn">Cancelar</button>
                    <button type="submit" class="btn btn-primary" id="save-product-btn">Salvar Produto</button>
                </div>
            </div>
        </div>
    </form>
    <!-- Modal de Visualização/Edição do Produto -->
    <div id="product-view-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="product-view-title">Detalhes do Produto</h2>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <div id="product-view-content">
                    <!-- Conteúdo será preenchido via JavaScript -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="close-product-btn">Fechar</button>
                <button type="button" class="btn btn-primary" id="edit-product-btn">Editar</button>
                <button type="button" class="btn btn-danger" id="delete-product-btn">Excluir</button>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmação de Exclusão -->
    <div id="delete-confirm-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Confirmar Exclusão</h2>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir este produto?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancel-delete-btn">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirm-delete-btn">Excluir</button>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toast-message">Operação realizada com sucesso!</span>
    </div>

    <script src="JS/fornecedores.js"></script>
</body>

</html>