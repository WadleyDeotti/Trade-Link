<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Fornecedor - TradeLink</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/fornecedores.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="/images/logo.png" alt="TradeLink">
            </div>
            <nav>
                <ul>
                    <li><a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a></li>
                    <li class="active"><a href="/fornecedores"><i class="fas fa-user"></i> Perfil</a></li>
                    <li><a href="/pedidos"><i class="fas fa-file-invoice"></i> Pedidos/Vendas</a></li>
                    <li><a href="/historico"><i class="fas fa-history"></i> Histórico</a></li>
                    <li><a href="/mensagens"><i class="fas fa-envelope"></i> Mensagens</a></li>
                    <li><a href="/configuracoes"><i class="fas fa-cog"></i> Configurações</a></li>
                </ul>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header>
                <h1><i class="fas fa-user"></i> Perfil do Fornecedor</h1>
                <div class="user-info">
                    <span id="header-user-name">TradeLink</span>
                    <img id="header-user-pic" src="/images/profile.jpg" alt="Usuário">
                </div>
            </header>

            <div class="content">
                <!-- Perfil -->
                <div class="profile-container">
                    <div class="profile-banner">
                        <img id="banner-image" src="/images/banner.jpg" alt="Banner">
                    </div>
                    <div class="profile-info">
                        <div class="profile-avatar">
                            <img id="avatar-image" src="/images/foto.jpg" alt="Avatar">
                        </div>
                        <div class="profile-details">
                            <h1 class="profile-name" id="profile-name">Nome do Fornecedor</h1>
                            <div class="profile-location">
                                <i class="fas fa-map-marker-alt"></i>
                                <span id="profile-location">Localização</span>
                            </div>
                            <p class="profile-description" id="profile-description">
                                Descrição do negócio do fornecedor.
                            </p>
                            <div class="profile-stats">
                                <div class="stat-item">
                                    <span class="stat-value">15</span>
                                    <span class="stat-label">Produtos</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value">32</span>
                                    <span class="stat-label">Pedidos</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value">4.8</span>
                                    <span class="stat-label">Avaliação</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formulário de Edição -->
                <form id="formPerfil" method="POST" action="/fornecedores/editar">
                    <div class="form-section">
                        <h2>Informações Pessoais</h2>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="fornecedor-nome">Nome:</label>
                                <input id="fornecedor-nome" name="nome" type="text" placeholder="Nome do fornecedor" required>
                            </div>
                            <div class="form-group">
                                <label for="fornecedor-email">Email:</label>
                                <input id="fornecedor-email" name="email" type="email" placeholder="email@exemplo.com" required>
                            </div>
                            <div class="form-group">
                                <label for="fornecedor-cpf">CPF/CNPJ:</label>
                                <input id="fornecedor-cpf" name="cpf_cnpj" type="text" placeholder="000.000.000-00" required>
                            </div>
                            <div class="form-group">
                                <label for="fornecedor-local">Localização:</label>
                                <input id="fornecedor-local" name="localizacao" type="text" placeholder="Cidade, Estado" required>
                            </div>
                            <div class="form-group">
                                <label for="fornecedor-senha">Senha:</label>
                                <div class="input-with-icon">
                                    <input id="fornecedor-senha" name="senha" type="password" value="••••••••" readonly>
                                    <button type="button" class="toggle-password" id="view-password-btn">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <button type="button" class="btn btn-secondary" id="change-password-btn">
                                    <i class="fas fa-key"></i> Alterar Senha
                                </button>
                            </div>
                            <div class="form-group">
                                <label for="fornecedor-telefone">Telefone:</label>
                                <input id="fornecedor-telefone" name="telefone" type="tel" placeholder="(00) 00000-0000">
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h2>Descrição do Negócio</h2>
                        <div class="form-group">
                            <label for="fornecedor-descricao">Descreva seu negócio:</label>
                            <textarea id="fornecedor-descricao" name="descricao" placeholder="Descreva seus produtos ou serviços..." required></textarea>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary" id="cancel-btn">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="save-btn">Salvar Alterações</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/JavaScript/fornecedores.js"></script>
</body>
</html>
