<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Histórico - TradeLink</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/historico.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="/images/logo.png" alt="TradeLink">
            </div>
            <nav>
                <ul>					
					<li><a href="dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
					<li><a href="fornecedores"><i class="fas fa-user"></i> Perfil</a></li>
					<li><a href="pedidos"><i class="fas fa-file-invoice"></i> Pedidos/Vendas</a></li>
					<li><a href="historico"><i class="fas fa-history"></i> Histórico</a></li>
					<li><a href="mensagens"><i class="fas fa-envelope"></i> Mensagens</a></li>
					<li class="active"><a href="produto"><i class="fas fa-box"></i> Produtos</a></li>
					<li><a href="categoria"><i class="fas fa-tags"></i> Categorias</a></li>
					<li><a href="configuracoes"><i class="fas fa-cog"></i> Configurações</a></li>
				</ul>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header>
                <h1><i class="fas fa-history"></i> Histórico de Compras/Vendas</h1>
                <div class="user-info">
                    <span>Empresa XYZ</span>
                    <img src="/images/profile.jpg" alt="Usuário">
                </div>
            </header>

            <div class="content">
                <!-- Filtros e Busca -->
                <div class="filters">
                    <div class="filter-group">
                        <label for="year-filter"><i class="fas fa-calendar"></i> Ano:</label>
                        <select id="year-filter">
                            <option value="2023">2023</option>
                            <option value="2022">2022</option>
                            <option value="2021">2021</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label for="type-filter"><i class="fas fa-exchange-alt"></i> Tipo:</label>
                        <select id="type-filter">
                            <option value="all">Todos</option>
                            <option value="purchase">Compras</option>
                            <option value="sale">Vendas</option>
                        </select>
                    </div>
                    <div class="search-group">
                        <input type="text" placeholder="Buscar no histórico..." id="search-input">
                        <button><i class="fas fa-search"></i></button>
                    </div>
                </div>

                <!-- Resumo Financeiro -->
                <div class="financial-summary">
                    <div class="summary-card">
                        <div class="summary-icon"><i class="fas fa-shopping-cart"></i></div>
                        <div class="summary-content">
                            <span class="summary-label">Total em Compras</span>
                            <span class="summary-value" id="total-purchases">R$ 0,00</span>
                        </div>
                    </div>
                    <div class="summary-card">
                        <div class="summary-icon"><i class="fas fa-cash-register"></i></div>
                        <div class="summary-content">
                            <span class="summary-label">Total em Vendas</span>
                            <span class="summary-value" id="total-sales">R$ 0,00</span>
                        </div>
                    </div>
                    <div class="summary-card">
                        <div class="summary-icon"><i class="fas fa-balance-scale"></i></div>
                        <div class="summary-content">
                            <span class="summary-label">Saldo</span>
                            <span class="summary-value" id="balance">R$ 0,00</span>
                        </div>
                    </div>
                </div>

                <!-- Gráfico -->
                <div class="chart-container">
                    <canvas id="history-chart"></canvas>
                </div>

                <!-- Tabela de Histórico -->
                <div class="history-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Tipo</th>
                                <th>Parceiro</th>
                                <th>Valor</th>
                                <th>Status</th>
                                <th>Detalhes</th>
                            </tr>
                        </thead>
                        <tbody id="history-body">
                            <!-- Conteúdo carregado via JS -->
                        </tbody>
                    </table>
                </div>

                <!-- Paginação -->
                <div class="pagination">
                    <button disabled><i class="fas fa-chevron-left"></i></button>
                    <span class="page-info">Página 1 de 1</span>
                    <button disabled><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/JavaScript/historico.js"></script>
</body>
</html>
