<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos e Vendas - TradeLink</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/pedidos.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="logo.png" alt="TradeLink">
            </div>
            <nav>
                <ul>
                    <li><a href="inicial.ejs"><i class="fas fa-home"></i> Produtos</a></li>
                    <li><a href="dashboard"><i class="fas fa-home"></i> Dashboard</a></li>
                    <li><a href="fornecedores"><i class="fas fa-user"></i> Perfil</a></li>
                    <li class="active"><a href="pedidos"><i class="fas fa-file-invoice"></i> Pedidos/Vendas</a></li>
                    <li><a href="historico"><i class="fas fa-history"></i> Histórico</a></li>
                    <li><a href="chat"><i class="fas fa-robot"></i> Chat IA</a></li>
                    <li><a href="configuracoes"><i class="fas fa-cog"></i> Configurações</a></li>
                </ul>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header>
                <h1><i class="fas fa-file-invoice"></i> Pedidos e Vendas</h1>
                <div class="user-info">
                    <span>Empresa XYZ</span>
                    <img src="profile.jpg" alt="Usuário">
                </div>
            </header>

            <div class="content">
                <!-- Filtros e Busca -->
                <div class="filters">
                    <div class="filter-group">
                        <label for="status-filter"><i class="fas fa-filter"></i> Status:</label>
                        <select id="status-filter">
                            <option value="all">Todos</option>
                            <option value="pending">Pendentes</option>
                            <option value="processing">Em processamento</option>
                            <option value="shipped">Enviados</option>
                            <option value="delivered">Entregues</option>
                            <option value="cancelled">Cancelados</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="date-filter"><i class="fas fa-calendar"></i> Período:</label>
                        <select id="date-filter">
                            <option value="all">Todos</option>
                            <option value="today">Hoje</option>
                            <option value="week">Esta semana</option>
                            <option value="month">Este mês</option>
                            <option value="custom">Personalizado</option>
                        </select>
                    </div>
                    
                    <div class="search-group">
                        <input type="text" placeholder="Buscar pedido..." id="search-input">
                        <button><i class="fas fa-search"></i></button>
                    </div>
                    
                    <!-- Botão temporário para adicionar pedido de teste -->
                    <button id="add-test-order" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Adicionar Pedido Teste
                    </button>
                </div>

                <!-- Tabela de Pedidos/Vendas -->
                <div class="orders-table">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Data</th>
                                <th>Parceiro</th>
                                <th>Valor</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="orders-body">
                            <!-- Os pedidos serão carregados aqui via JavaScript -->
                        </tbody>
                    </table>
                </div>

                <!-- Paginação -->
                <div class="pagination">
                    <button disabled><i class="fas fa-chevron-left"></i></button>
                    <span class="page-info">Página 1 de 1</span>
                    <button disabled><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para Adicionar Pedido Teste (Temporário) -->
    <div id="test-order-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Adicionar Pedido de Teste</h2>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <form id="test-order-form">
                    <div class="form-group">
                        <label for="test-order-type">Tipo:</label>
                        <select id="test-order-type" required>
                            <option value="purchase">Pedido (Compra)</option>
                            <option value="sale">Venda</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="test-order-partner">Parceiro:</label>
                        <input type="text" id="test-order-partner" placeholder="Nome do fornecedor/empresa" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="test-order-value">Valor (R$):</label>
                        <input type="number" id="test-order-value" min="0" step="0.01" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="test-order-status">Status:</label>
                        <select id="test-order-status" required>
                            <option value="pending">Pendente</option>
                            <option value="processing">Em processamento</option>
                            <option value="shipped">Enviado</option>
                            <option value="delivered">Entregue</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="test-order-details">Detalhes:</label>
                        <textarea id="test-order-details" rows="3" placeholder="Descrição dos produtos/serviços"></textarea>
                    </div>
                    
                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary close-modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Adicionar Pedido</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal de Detalhes do Pedido -->
    <div id="order-detail-modal" class="modal">
        <div class="modal-content large">
            <div class="modal-header">
                <h2>Detalhes do Pedido <span id="order-id"></span></h2>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <div class="order-detail-container">
                    <div class="order-info">
                        <div class="info-item">
                            <span class="label">Data:</span>
                            <span class="value" id="order-date"></span>
                        </div>
                        <div class="info-item">
                            <span class="label">Parceiro:</span>
                            <span class="value" id="order-partner"></span>
                        </div>
                        <div class="info-item">
                            <span class="label">Status:</span>
                            <span class="value" id="order-status"></span>
                        </div>
                        <div class="info-item">
                            <span class="label">Valor Total:</span>
                            <span class="value" id="order-value"></span>
                        </div>
                    </div>
                    
                    <div class="order-products">
                        <h3>Itens do Pedido</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Produto/Serviço</th>
                                    <th>Quantidade</th>
                                    <th>Preço Unitário</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody id="order-products-body">
                                <!-- Itens serão carregados aqui -->
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="order-actions">
                        <button class="btn btn-primary" id="print-order">
                            <i class="fas fa-print"></i> Imprimir
                        </button>
                        <button class="btn btn-secondary" id="change-status">
                            <i class="fas fa-sync-alt"></i> Alterar Status
                        </button>
                        <button class="btn btn-danger" id="cancel-order">
                            <i class="fas fa-times"></i> Cancelar Pedido
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/JS/pedidos.js"></script>
</body>
</html>